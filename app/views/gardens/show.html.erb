<!-- Garden Images-->
<div class="container-garden">
 <h2><%= @garden.name %></h2>
  <div class="row justify-content-around">
    <% if @garden.photos.attached? %>
    <% @garden.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 220, width: 220, crop: :fill %>
