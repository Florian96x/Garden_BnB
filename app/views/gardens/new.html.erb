<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h2>Offer your garden!</h2>
      <%= simple_form_for(@garden) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :address %>
        <%= f.input :price_per_day %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
      <%= link_to "Back to homepage", root_path %>
    </div>
  </div>
</div>
