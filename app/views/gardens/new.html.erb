<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h2>Offer your garden!</h2>
      <%= simple_form_for(@garden) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :address %>
        <%= f.input :price_per_day %>
        <div>
          <p>Optional: Specify days when you are using your garden</p>
          <%= f.input :start_date, as: :string, required: false, input_html: { id: "range_start" } %>
          <%= f.input :end_date, as: :string, required: false, input_html: { id: "range_end" } %>
        </div>
        <%= f.submit %>
      <% end %>
      <%= link_to "Back to homepage", root_path %>
    </div>
  </div>
</div>
