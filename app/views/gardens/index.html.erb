
<div class="navbar navbar-expand-sm  navbar-fixed-top navbar-lewagon bg-success">
    <a class="navbar-brand" href="#">
      <%= image_tag('logo-gardenBnB-normal.png') %>
    </a>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <%= link_to "Sign up", new_user_session_path, class: "nav-link btn btn-primary mr-4 bg-success"%>
            </li>
            <li class="nav-item dropdown">
                <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="#">Sign in</a>
                    <a class="dropdown-item" href="#">Sign up</a>
                </div>
            </li> 
        </ul>
    </div>
</div>

<% @gardens.each do |garden| %>
    <div class="container_gardens">
        <%= link_to garden_path(garden), {:style=>'color:#000000; text-decoration : none'}  do %>
            <div class="card-trip">
                <img src="https://source.unsplash.com/random/1180×240/?garden" />
                <div class="card-trip-infos">
                    <div>
                    <h2><%= garden.name %></h2>
                    <p><%= garden.description %></p>
                    </div>
                    <h2 class="card-trip-pricing"><%= garden.price_per_day %>€</h2>
                    <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
                </div>
            </div>
        <% end %>
    </div>
<% end %>
