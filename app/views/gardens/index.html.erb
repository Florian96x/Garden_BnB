<%= render 'shared/navbar'%>

<% hosts = ["zuzanasoltisova", "federico-dev", "aphanite"] %>
<div class="main-container">
  <div class="garden-info">
    <div class="garden-header d-flex justify-content-between">
      <% if params[:query] %>
        <h2> Gardens in <%= params[:query].capitalize %></h2>
      <% else %>
        <h2> Gardens in Berlin</h2>
      <% end %>
      <p> <%= @gardens.count %> objects </p>
    </div>

    <div class="container-gardens">

      <% @gardens.each do |garden| %>

        <%= link_to garden_path(garden), {:style=>'color:#000000; text-decoration : none'}  do %>
          <div class="card-trip">
            <img src="https://source.unsplash.com/random/1180Ã—240/?garden" />
            <div class="card-trip-infos">
              <div>
                <h2><%= garden.name %></h2>
                <p><%= garden.address %></p>
              </div>
              <h2 class="card-trip-pricing"><%= garden.price_per_day %>â‚¬</h2>
              <img src="https://kitt.lewagon.com/placeholder/users/<%= hosts.sample %>" class="card-trip-user avatar-bordered" />
            </div>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>

  <div class="container-map">
    <div id="map"
      style="width: 100%; height: 850px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

</div>
