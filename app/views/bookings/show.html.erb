<%= render 'shared/navbar'%>

<div class="confirmation-page">
  <div class="confirmation-page-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path('garden.jpg') %>);">
    <div class="container">
      <h1>Thank you for you booking!</h1>
      <p>Your request has been sent to the host!
      <br>
        Please wait for the confirmation.
      </p>
    </div>
  </div>

<div class="container text-center">
  <div class="row">
    <div class="col-sm">
      <%= @svg.try(:html_safe) %>
    </div>

    <div class="col-sm pt-4">
      <div>You will be staying at:</div>
      <div class="p-2 font-weight-bold"><%= @booking.garden.name.upcase %> </div>
      <div class="p-2">Address: <%= @booking.garden.address %></div>
      <div>From: <%= @booking.start_date.strftime("%B %e, %Y") %> </div>
      <div>To: <%= @booking.end_date.strftime("%B %e, %Y") %></div>
      <div class="p-2 font-weight-bold">Total Price: <%= @booking.total_price %>â‚¬</div>
    </div>
  </div>
</div>

