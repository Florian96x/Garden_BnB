<h1>New booking</h1>

<%= simple_form_for [@garden, @booking] do |f| %>
  <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker", id: "range_start"} %>
  <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker", id: "range_end"} %>
  <%= f.input :user_introduction, label: "Leave a message to the host", placeholder: "Write your message..." %>
  <%= f.submit "Book your garden", class: "btn btn-success" %>
<% end %>