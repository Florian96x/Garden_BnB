
<!-- Banner -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path('garden.jpg') %>);">
  <!-- Navbar -->
  <div class="navbar navbar-expand-sm  navbar-fixed-top navbar-lewagon">
    <a class="navbar-brand" href="/">
      <%= image_tag('logo-gardenBnB-normal.png') %>
    </a>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
           <%= link_to "Offer your garden", new_garden_path, class: "nav-link"%>
          </li>
          <li class="nav-item active">
             <%= link_to "Profile", profile_path(current_user), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign out", destroy_user_session_path, class: "nav-link", method: :delete, data: { confirm: "Are you sure?" } %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Offer your garden", new_garden_path, class: "nav-link"%>
          </li>
          <li class="nav-item active">
            <%= link_to "Sign in", new_user_session_path, class: "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link"%>
          </li>
        <% end %>
      </ul>
    </div>
  </div>


  <!-- Banner content -->
  <div class="container">
    <h1>Dreaming of your own garden?</h1>
    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>

    <%= form_tag gardens_path, method: :get do %>
      <div class="search-form-control form-group">
        <div class="form-control">
            <%= text_field_tag :query, params[:query], placeholder: "Where should your garden be?" %>
          <button name="button" type="submit" class="btn btn-custom">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

